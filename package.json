{
  "name": "crossfi-cli",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CrossFi-Africa-Ecosystem/crossfi-africa.git"
  },
  "scripts": {
    "build": "tsup",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run lint && npm run test",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "lint": "tsc",
    "test": "vitest run",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"


  },
  "author": "CrossFi Africa Tech Team",
  "license": "MIT",
  "description": "Get started building dApps on CrossFi Chain",
  "keywords": [
    "crossfi-africa",
    "crossfi",
    "web3",
    "Crypto"
  ],
  "homepage": "https://github.com/CrossFi-Africa-Ecosystem/crossfi-africa#readme",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@changesets/cli": "^2.27.10",
    "prettier": "^3.4.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.cjs"
    }
  }
}
